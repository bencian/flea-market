<h2 class='mt-2'><%= @product.name %></h2>
<div class='text-right'>
  <%= link_to t('button_options.return'), products_path, class: 'btn btn-outline-secondary' %>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @product.product_images.each do |i|%>
      <% if i.primary %> 
        <div class="carousel-item active">
          <%= image_tag i.image, class: 'img-fluid d-block w-100'%>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= image_tag i.image, class: 'img-fluid d-block w-100'%>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class='card'>
  <div class='card-body'>
    <h4><%= t('entity_fields.product.description')%></h4>
    <p><%= @product.description %></p>
  </div>
  <div class='card-body'>
    <h4><%= t('entity_fields.product.price')%></h4>
    <p><%= @product.price %></p>
  </div>
  <div class='card-body'>
    <h4><%= t('entity_fields.product.category')%></h4>
    <p><%= @product.category.name %></p>
  </div>
  <div class='card-body'>
    <h4><%= t('entity_fields.product.tags')%></h4>
    <p>
      <% @product.tags.each do |tag| %>
        <%= tag.name %>
      <% end %>
    </p>
  </div>
</div>