<% image = f.object&.image #CHANGE!%>

<div class='nested-fields card'>
  <div class='card-body'>
    <div class="form-group">
      <% if image.attached? %>
        <%= f.hidden_field :image, value: f.object.image.signed_id%>
        <%= f.label :image, image.filename %>
        <%= image_tag image, class: 'img-fluid', style: 'width: 250px' %>
      <% end %>
      <%= f.file_field :image, direct_upload: true, class: 'form-control' %>
    </div>
    <div class="form-check">
      <%= f.label :primary, 'Principal', class: "form-check-label" %>
      <%= f.check_box :primary, class: 'form-check-input' %>
    </div>
  </div>
  <div class="form-group">
    <%= link_to_remove_association t('entity_fields.product.delete_image'), f %>
  </div>
</div>