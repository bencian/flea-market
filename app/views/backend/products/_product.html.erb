<tr>
  <td><%= product.name %></td>
  <td><%= product.description %></td>
  <td><%= product.code %></td>
  <td><%= product.price %></td>
  <td><%= product.cost %></td>
  <td><%= product.active %></td>
  <td><%= product.category.name %></td>
  <td>
    <% product.tags.each do |tag| %>
    <%= tag.name %>
    <% end %>
  </td>
 
  <td><%= image_tag product.primary_image, class: 'img-fluid', style: 'width: 200px' %></td>
  <td class='text-right'>
    <%= link_to 'Ver', admin_product_path(product), class: 'btn btn-sm btn-outline-info' %>
    <br>
    <%= link_to 'Editar', edit_admin_product_path(product), class: 'btn btn-sm btn-outline-warning' %>
    <br>
    <%= link_to 'Borrar', admin_product_path(product), method: :delete, data: { confirm: 'Esta seguro?' }, class: 'btn btn-sm btn-outline-danger' %>
    <br>
  </td>
</tr>