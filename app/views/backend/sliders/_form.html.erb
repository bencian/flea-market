<%= form_with model: @slider do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :image, 'Nombre' %>
      <%= image_tag @slider.image.image if @slider.persisted? %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>
<% end %>