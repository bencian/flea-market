<%= form_with model: [:admin, @slider] do |f| %>
    <div class="form-group">
      <%= f.label :name, t('entity_fields.slider.name') %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :image, t('entity_fields.slider.image') %>
      <%= image_tag @slider.image.attachment if @slider.persisted? %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('button_options.close')%></button>
    <%= f.submit t('button_options.save'), class: 'btn btn-primary' %>
  </div>
<% end %>